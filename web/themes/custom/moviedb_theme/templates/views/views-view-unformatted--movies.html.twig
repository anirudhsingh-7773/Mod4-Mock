{#
  - Row 1: 3 cards (col-4)
  - Row 2: 2 cards (col-6)
  - Row 3: 4 cards (col-3)
  - Max: 9 cards
#}
{{ attach_library('moviedb_theme/movie-modal') }}

{% if title %}
  <h3>{{ title }}</h3>
{% endif %}

<div class="movie-grid container">

  <div class="movie-row row">
    {% for i in [0, 1, 2] %}
      {% if rows[i] is defined %}
        <div{{ rows[i].attributes.addClass('movie-card-wrapper', 'col-12', 'col-md-4','mb-4') }}>
          {{ rows[i].content }}
        </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="movie-row row">
  {% for i in [3,4] %}
    {% if rows[i] is defined %}
      <div{{ rows[i].attributes.addClass('movie-card-wrapper', 'col-12', 'col-md-6','mb-4') }}>
        {{ rows[i].content }}
      </div>
      {% endif %}
    {% endfor %}
  </div>

  <div class="movie-row row">
    {% for i in [5, 6, 7, 8] %}
      {% if rows[i] is defined %}
      <div{{ rows[i].attributes.addClass('movie-card-wrapper','col-12','col-md-6','col-lg-3','mb-4') }}>
        {{ rows[i].content }}
      </div>
      {% endif %}
    {% endfor %}
  </div>

</div>
